# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://temple_user:temple_pass@localhost:5432/temple_db
MONGODB_URL=mongodb://temple_user:temple_pass@localhost:27017/temple_analytics
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SendGrid/SMTP)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@temple.com
EMAIL_FROM_NAME=Temple Management

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000

# Crowd Monitoring
CROWD_UPDATE_INTERVAL=30000
ALERT_THRESHOLD_PERCENTAGE=80

# Queue Management
QUEUE_PROCESSING_INTERVAL=60000
AVERAGE_SERVICE_TIME=300
